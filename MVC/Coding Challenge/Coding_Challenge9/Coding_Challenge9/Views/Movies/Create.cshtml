@model IEnumerable<Movie>
<h2>Movies</h2>
<p>@Html.ActionLink("Add New", "Create")</p>
<table class="table">
    <tr><th>ID</th><th>Name</th><th>Director</th><th>Release</th><th>Action</th></tr>
    @foreach (var m in Model)
    {
<tr>
    <td>@m.Mid</td>
    <td>@m.MovieName</td>
    <td>@m.DirectorName</td>
    <td>@m.DateOfRelease.ToShortDateString()</td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = m.Mid }) |
        @Html.ActionLink("Delete", "Delete", new { id = m.Mid })
    </td>
</tr>
}
</table>

